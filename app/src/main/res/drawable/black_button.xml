<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#300000"/>
            <stroke
                android:width="1dp"
                android:color="#fff"/>
            <padding
                android:bottom="20dp"
                android:left="16dp"
                android:right="16dp"
                android:top="20dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#000"/>
            <stroke
                android:width="1dp"
                android:color="#fff"/>
            <padding
                android:bottom="20dp"
                android:left="16dp"
                android:right="16dp"
                android:top="20dp"/>
        </shape>
    </item>

</selector>